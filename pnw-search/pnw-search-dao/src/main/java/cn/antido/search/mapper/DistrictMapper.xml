<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="cn.antido.search.mapper.DistrictMapper">
	
	<resultMap id="BaseResultMap" type="cn.antido.admin.pojo.District">
		<id column="id" property="id"/>  
        <result column="name" property="name"/>  
        <result column="parent_id" property="parent_id"/>  
	</resultMap>
	
	<sql id="tableName" > 
		 tb_district 
	</sql>
	
	
	<sql id="baseColumn" > 
		id, name, parent_id
	</sql>
	
	<!-- 根据主键查询 -->
	<select id="selectByPrimaryKey" parameterType="Integer" resultMap="BaseResultMap">
		select 
			<include refid="baseColumn" />
		from 
			<include refid="tableName" />
		where id = #{id}
	</select>
	
	<!-- 根据parent_id -->
	<select id="selectByParentId" parameterType="Integer" resultMap="BaseResultMap">
		select 
			<include refid="baseColumn" />
		from 
			<include refid="tableName" />
		where parent_id = #{parent_id}
	</select>
	
	<select id="selectByParentIdIsNull" resultMap="BaseResultMap">
		select 
			<include refid="baseColumn" />
		from 
			<include refid="tableName" />
		where parent_id IS NULL
	</select>
	
</mapper>